<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/contacts_recycler_view_profile_pic"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/photo"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />

    <LinearLayout
        android:gravity="center"
        android:id="@+id/contact_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/contacts_recycler_view_profile_pic"
        android:layout_alignTop="@+id/contacts_recycler_view_profile_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/contacts_recycler_view_profile_pic"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contacts_recycler_view_contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vishnu Nemlawala"
            android:textColor="@color/chat_color"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>